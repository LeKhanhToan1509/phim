html
    head 
        link(rel="stylesheet", href="stylesheets/login.css")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css", integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm", crossorigin="anonymous")
        style.
            body {
                user-select: none;
            }

            .navbar-brand {
                display: flex;
                justify-content: space-between;
                width: 100%;
            }

            .navbar-brand img {
                height: 40px;
                margin: 30px;
            }

            .navbar-brand button {
                background-color: #e50914;
                color: white;
                border: none;
                border-radius: 5px;
                font-weight: bold;
                margin: 30px;
            }
            .title{
                text-align: center;
                margin-top: 20px;
            }
            .title h1{
                font-size: 2.5em;
                font-weight: 900;
                margin-bottom: 10px;
            }
            .title p{
                font-size: 1em;
                font-weight: 400;
                margin-bottom: 10px;    
            }
            .box{
                display: flex;
                flex-direction: column;  // Sắp xếp các phần tử theo hàng
                justify-content: center;
                align-items: center;
                margin-top: 20px;
            }
            form .box input {
                widht: 500px;
                font-size: 1.5em;
                color: black;
            }
            form .box input:focus {
                background-color: transparent;
                color: black;
                font-size: 1.5em;
            }
            form {
                margin-top: 100px;
            }
            form .box button {
                height: 60px;
                font-size: 1.5em;
                border-radius: 5px;
                background-color: #e50914;
                color: white;
                margin-left: 10px;
                margin-top: 20px;
                font-weight: bold;
                width : 500px;
            }
    body
        .login 
            .navbar-brand
                a(href='/')
                    img(src='https://upload.wikimedia.org/wikipedia/commons/0/08/Netflix_2015_logo.svg', alt='Your Logo')
                button(type='button', class='btn', onclick='location.href="/account/login"') SIGN IN
            form.start(method='GET', action = `/account/login`)
                .title
                    p Step 2 of 2
                    h1 Wellcome to Website 
                    h1 This gift for Phuong Anh
                    p This website is not intended to make money, it's for Phuong Anh
                .input-group.mb-3.box
                    button#getstart.btn.btn-outline-secondary Explore
            form.home.d-none(method="GET" action = "/")  

        script(src="https://code.jquery.com/jquery-3.2.1.slim.min.js", integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN", crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js", integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q", crossorigin="anonymous")
